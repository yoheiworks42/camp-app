<%= form_for(@user) do |f| %>
          <%= render "shared/error_messages"%>
          
            <%=f.label :name,"ユーザー名" %>
            <%=f.text_field :name, class: 'form-control' %>
            
            <%=f.label :email,"メールアドレス"%>
            <%=f.email_field :email, class: 'form-control'%>
            
            <%=f.label :password,"パスワード"%>
            <%=f.password_field :password, class: 'form-control'%>
            
            <%=f.label :password_confirmation,"確認用パスワード"%>
            <%=f.password_field :password_confirmation, class: 'form-control'%>

            <%=f.label :message,"自己紹介メッセージ"%>
            <%=f.text_field :message, class: 'form-control'%>

            <%=f.label :img,"プロフィールアイコン"%></br>
              <% if @user.img?%>
                <%= image_tag @user.img.url %>
              <% else %>
                <%= image_tag("/images/icon/no-image.jpg") %>
              <% end %>
            <%=f.file_field :img, id: :img,class: 'form-control'%>

            <br><%=f.submit yield(:button_text), class: "btn btn-primary"%>
<%end%>