<div class="center">
    <h1>写真を投稿する</h1>
    <%= form_for(@post) do |f| %>
            <img @post.post_img, id="img_prev", class="slim200" if @post.post_img>
            <%=f.file_field :post_img, id: "myfile",class: 'form-control'%><br>
            <%=f.hidden_field :location_id, value:current_page_id, class: 'form-control'%>
            <%=f.submit "投稿", class: "btn btn-primary"%>
    <%end%>
</div>