<div class="center">
    <h1>写真を投稿する</h1>
    <%= form_for(@post) do |f| %>
        <span class="picture">
            <%=f.file_field :post_img, class: 'form-control'%><br>
        </span>
            <%=f.hidden_field :location_id, value:current_page_id, class: 'form-control'%>
            <%=f.submit "投稿", class: "btn btn-primary"%>
    <%end%>
</div>